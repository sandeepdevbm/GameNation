<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-6" style="width: 70%;">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Coupon</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/add-coupon" method="post" >
                            <div class="row mb-3">
                                <label for="inputTitle" class="col-sm-2 col-form-label">Coupon Name</label>
