<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-6" style="width: 90%;">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Category</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/edit-category/{{category._id}}" method="post">
                            <div class="row mb-3">
                                <label for="inputTitle" class="col-sm-2 col-form-label">Category Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="categoryName" value="{{category.categoryName}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </div>
                            </div>
                        </form><!-- End General Form Elements -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->