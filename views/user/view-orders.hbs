                                                <th scope="col">Payment</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each order}}
                                            <tr>
                                                <th scope="row"> {{inc @index}}</th>
                                                <td>{{this.Date}}</td>
                                                <td>{{this.deliveryDetails.address}}</td>
                                                <td>{{this.deliveryDetails.pinCode}}</td>
                                                <td>{{this.deliveryDetails.phone}}</td>
                                                <td>{{this.totalAmount}}</td>
                                                <td>{{this.paymentMethod}}</td>
                                                <td>{{this.status}}</td>
                                                <td>
                                                    <a href="/view-order-products/{{this._id}}"
                                                        class="btn btn-primary">View Products</a>
                                                    {{!-- {{#if (isCancelled this.status)}}

                                                    {{else}}
                                                    <a href="/cancel-order-product/{{this._id}}" class="btn btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete')">cancel</a>
                                                    {{/if}} --}}
                                                </td>
                                            </tr>
                                            {{/each}}
